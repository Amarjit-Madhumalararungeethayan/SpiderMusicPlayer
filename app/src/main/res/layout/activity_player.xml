<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Player">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="80dp"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="88dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="70dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/musiclogo"
            android:scaleType="centerCrop"
            android:scaleX="2"
            android:scaleY="2"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="See Beneath Your Beautiful ..."
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/deet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/song"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Amarjit"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/moon"
        android:textSize="17sp"
        />

    <ImageView
        android:id="@+id/play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintTop_toBottomOf="@id/deet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:scaleX="1.25"
        android:scaleY="1.25"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_skip_next_24"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintStart_toEndOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        android:layout_marginLeft="35dp"
        android:scaleX="1.25"
        android:scaleY="1.25"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_skip_next_24"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintEnd_toStartOf="@id/play"
        app:layout_constraintBottom_toBottomOf="@id/play"
        android:layout_marginRight="35dp"
        android:rotation="180"
        android:scaleX="1.25"
        android:scaleY="1.25"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:rotation="-90"
        android:layout_marginLeft="348dp"
        android:layout_marginBottom="189dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/card"
        />

    <SeekBar
        android:id="@+id/vol"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="230dp"
        android:rotation="-90"
        android:progress="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card" />


    <TextView
        android:layout_width="274dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="258dp"
        android:background="@color/white"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        />

    <SeekBar
        android:id="@+id/pos"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <TextView
        android:id="@+id/st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:fontFamily="@font/moon"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/pos"
        app:layout_constraintTop_toBottomOf="@id/pos"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/fi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:fontFamily="@font/moon"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/pos"
        app:layout_constraintTop_toBottomOf="@id/pos"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>